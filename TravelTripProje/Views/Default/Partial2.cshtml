@using TravelTripProje.Models.Siniflar
@model List<Blog>

@foreach (var c in Model)
{
    <div class="right">
        <div class="bot-left">
            <img src="@c.BlogImage" alt="" style="height:200px; width:320px;" />
        </div>
        <div class="left-text">
            <h4>@c.Baslik</h4>
            <span class="doller">@c.Tarih.ToShortDateString()</span>
            <p>@c.Aciklama.Substring(0, c.Aciklama.Substring(0, 80).LastIndexOf(" ")) </p>
            <p><a href="/Blog/BlogDetay/@c.ID"><span class="read">Devamını Oku</span></a></p>
        </div>
    </div>
}


